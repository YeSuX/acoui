  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.38.4",
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "cz-git": "^1.6.1",
    "eslint": "^8.37.0",
    "lint-staged": "^13.2.0",
    "simple-git-hooks": "^2.8.1",
    "turbo": "^1.8.8"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
