{
  "name": "acoui",
  "version": "0.0.0",
  "packageManager": "pnpm@8.1.0",
  "description": "",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "dev": "turbo run dev --no-cache --continue",
    "preinstall": "simple-git-hooks",
    "commit": "git add . && cz",
    "changeset": "changeset",
